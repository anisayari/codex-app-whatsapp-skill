# Server
HOST=127.0.0.1
PORT=8080
LOG_LEVEL=info

# Baileys auth state (persist this directory)
AUTH_STATE_DIR=./auth_state

# If set, all admin HTTP endpoints require: Authorization: Bearer <token>
GATEWAY_ADMIN_TOKEN=change-me

# Security: who is allowed to talk to the bot
# If empty, you must pair after /init (send: "PAIR <code>" from your phone).
OWNER_NUMBERS=
OWNER_JIDS=
ALLOW_GROUPS=false

# Reply mode
# - echo: reply with a simple acknowledgement
# - webhook: call WEBHOOK_URL and send its reply back to WhatsApp
# - codex: call the local `codex` CLI and return the last message (best for \"talk to my Codex\")
REPLY_MODE=codex
WEBHOOK_URL=

# Limits (avoid spam + WhatsApp UX limits)
MAX_INBOUND_CHARS=4000
MAX_REPLY_CHARS=3500

# Codex (REPLY_MODE=codex)
CODEX_BIN=codex
CODEX_WORKDIR=.
CODEX_SANDBOX=read-only
CODEX_MODEL=
CODEX_TIMEOUT_MS=300000
CODEX_SKIP_GIT_CHECK=true

# CLI
ENABLE_CLI=true
